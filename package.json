{
    "name": "flowtorio",
    "private": true,
    "version": "0.0.0",
    "license": "MIT",
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "author": "Alexander Topalo <topaloalexander@gmail.com>",
    "scripts": {
        "build": "pnpm -r -F packages/* run build",
        "dev": "pnpm -r --parallel -F \"./packages/*\" run dev",
        "dev:libs": "pnpm -r --parallel -F @flowtorio/tui-terminal-kit -F @flowtorio/cli run dev",
        "dev:flow": "pnpm -F @flowtorio/flow dev",
        "test": "pnpm -r -F packages/* run test",
        "lint": "pnpm eslint --ext .ts,.vue,.js .",
        "release": "pnpm -r -F packages/* run release",
        "flow": "pnpm -C packages/cli run flow"
    },
    "devDependencies": {
        "@escral/lint": "^2.0",
        "@escral/tsconfig": "^0.2.1",
        "@escral/versioning": "^1.5",
        "@eslint/compat": "^1.4.1",
        "@types/node": "^22.10",
        "typescript": "^5.9.3",
        "vitest": "^4.0.1"
    },
    "engines": {
        "node": ">=18.0"
    },
    "packageManager": "pnpm@10.20.0"
}
